		"@vitest/coverage-istanbul": "^3.0.8",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.4.8",
		"clsx": "^2.1.1",
		"dotenv": "^16.5.0",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"sharp": "^0.33.5",
