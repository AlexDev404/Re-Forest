{
	"name": "re-forest",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"deploy": "vercel",
		"preview": "vite preview",
		"seed": "npx tsx ./script/seed.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:unit:server": "vitest run 'src/**/*.test.ts' --exclude 'src/**/*.svelte.test.ts'",
		"test:unit:client": "vitest run --config vitest.config.svelte.ts",
		"test": "npm run test:unit:server && npm run test:unit:client && npm run test:e2e",
		"db:push": "drizzle-kit push",
		"db:pull": "drizzle-kit pull",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@beyonk/svelte-mapbox": "^11.0.0",
